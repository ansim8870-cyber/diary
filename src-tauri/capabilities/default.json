{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "fs:default",
    {
      "identifier": "fs:allow-read-dir",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:allow-read-file",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:allow-copy-file",
      "allow": [{ "path": "**" }]
    },
    "updater:default",
    "process:allow-restart"
  ]
}
