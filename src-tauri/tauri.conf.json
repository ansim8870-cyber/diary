{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "메이플 일기장",
  "version": "0.0.7",
  "identifier": "com.maple.diary",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "메이플 일기장",
        "width": 1024,
        "height": 860,
        "resizable": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/templates/*",
      "resources/tessdata/*"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDdBQTQyNzU0QTY5MjkwQkEKUldTNmtKS21WQ2VrZW81VzNQY2g3Ly9qakdhK2hEbVZLSzhQc1ZKb2ZaMEN3UU1xRlRlZVNkZDQK",
      "endpoints": [
        "https://github.com/ansim8870-cyber/diary/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
